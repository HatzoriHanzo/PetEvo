<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petevopierre">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_petevo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetEvoPierre.NoActionBar">
        <activity android:name=".Activities.activities.SucessoActivity"></activity>
        <activity android:name=".Activities.activities.PontuarActivity" />
        <activity android:name=".Activities.activities.QrCodeActivity" />
        <activity android:name=".Activities.activities.HomeActivity" />
        <activity android:name=".Activities.activities.LoginActivity"
            android:theme="@style/Theme.PetEvoPierre.NoActionBar"/>
        <activity android:name=".Activities.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>